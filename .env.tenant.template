# Unique Tenant Configuration
# Copy this file to .env.tenant2 or similar for actual usage

# Backend Port (Must be different if running concurrently locally)
PORT=3002

# API URL for Frontend (Must match PORT above)
VITE_API_URL=http://localhost:3002/api

# Supabase Configuration (REQUIRED: Completely Separate Project)
VITE_SUPABASE_URL=https://your-tenant-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-tenant-anon-key
VITE_SUPABASE_SERVICE_ROLE_KEY=your-tenant-service-role-key

# Optional: Supabase Function URL if different
VITE_SUPABASE_FUNCTION_URL=https://your-tenant-project.supabase.co/functions/v1/dynamic-api

# Email Service (Resend) - Likely separate account
VITE_RESEND_API_KEY=re_tenant_key_here
RESEND_API_KEY=re_tenant_key_here

# SMTP Configuration (If using separate email server)
SMTP_FROM="'Tenant Name' <support@tenant.com>"
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tenant@gmail.com
SMTP_PASSWORD=tenant_password

# M-Pesa Configuration (Separate Paybill/Till)
MPESA_CONSUMER_KEY=tenant_consumer_key
MPESA_CONSUMER_SECRET=tenant_consumer_secret
MPESA_INITIATOR_NAME=tenant_initiator
MPESA_SECURITY_CREDENTIAL=tenant_credential
MPESA_SHORTCODE=tenant_shortcode
MPESA_B2C_RESULT_URL=https://tenant-api.com/api/mpesa/b2c-result
MPESA_B2C_QUEUE_TIMEOUT_URL=https://tenant-api.com/api/mpesa/b2c-timeout
MPESA_TRANSACTION_STATUS_RESULT_URL=https://tenant-api.com/api/mpesa/transaction-status-result
MPESA_TRANSACTION_STATUS_QUEUE_TIMEOUT_URL=https://tenant-api.com/api/mpesa/transaction-status-timeout

# Other Integrations
VITE_JITSI_DOMAIN=8x8.vc
VITE_DEEPSEEK_API_KEY=sk-tenant-key-if-separate
VITE_VPAAS_MAGIC_COOKIE=tenant-cookie-if-separate
